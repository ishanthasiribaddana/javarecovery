<?xml version="1.0" encoding="UTF-8"?>
<jboss-deployment-structure xmlns="urn:jboss:deployment-structure:1.3">
    <ear-subdeployments-isolated>false</ear-subdeployments-isolated>
    
    <deployment>
        <dependencies>
            <!-- Hibernate -->
            <module name="org.hibernate" export="true"/>
            
            <!-- MySQL Driver -->
            <module name="com.mysql" export="true"/>
            
            <!-- Jackson JSON -->
            <module name="com.fasterxml.jackson.core.jackson-databind" export="true"/>
            <module name="com.fasterxml.jackson.datatype.jackson-datatype-jsr310" export="true"/>
            
            <!-- SLF4J Logging -->
            <module name="org.slf4j" export="true"/>
        </dependencies>
    </deployment>
    
    <sub-deployment name="jiat-recovery-ejb.jar">
        <dependencies>
            <module name="org.hibernate"/>
            <module name="com.mysql"/>
        </dependencies>
    </sub-deployment>
    
    <sub-deployment name="jiat-recovery-web.war">
        <dependencies>
            <module name="org.hibernate"/>
        </dependencies>
    </sub-deployment>
</jboss-deployment-structure>
